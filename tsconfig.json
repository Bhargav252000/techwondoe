{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2017",
    "outDir": "./dist",
    "rootDir": ".",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
  },
  "include": [
    "src/**/*.ts"
, "src/ormconfig.ts"  ],
  "exclude": [
    "node_modules"
  ],
  "typeRoots": [
    "./typings",
    "./node_modules/@types/"
  ]
}
